<Window x:Class="NPCE_WinClient.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NPCE_WinClient.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding Services}"
                  SelectedItem="{Binding SelectedService, Mode=TwoWay}" Margin="5 5">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <StackPanel>
                        <TextBlock FontSize="14" Text="{Binding IdRichiesta}" Margin="0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="Id Richiesta" Margin="5 10"></TextBlock>
            <TextBox Grid.Row="1"  Text="{Binding SelectedService.IdRichiesta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5 5"></TextBox>
            <TextBlock Text="Data Creazione" Grid.Row="2" Margin="10 10"></TextBlock>
            <TextBox Grid.Row="3" Text="{Binding SelectedService.CreationTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5 5"></TextBox>
            <TextBlock Text="Stato" Grid.Row="4" Margin="5 10"></TextBlock>
            <TextBox Grid.Row="5 " Text="{Binding SelectedService.State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5 5"></TextBox>
        </Grid>
    </Grid>

</Window>
