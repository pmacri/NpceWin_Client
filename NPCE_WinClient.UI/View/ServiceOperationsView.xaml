<UserControl x:Class="NPCE_WinClient.UI.View.ServiceOperationsDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPCE_WinClient.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="462.667"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="337.333"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="61.333"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="138.667"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,313,0.333" Grid.ColumnSpan="2">
            <TextBlock Text="Ambiente" Margin="10 0"/>
            <ComboBox x:Name="comboBox" Grid.Row="0" Grid.ColumnSpan="2"
                  HorizontalAlignment="Left" 
                  Margin="10,0,-0.333,0"                   
                  VerticalAlignment="Top" 
                  Width="257" Height="22"
                  ItemsSource="{Binding Ambienti}"
                  DisplayMemberPath="Description"
                  SelectedItem="{Binding Ambiente}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="18.333,0,0,0.333">
            <TextBlock Text="Tipo Servizio" Margin="10 0"/>
            <ComboBox x:Name="cmbTipoServizio"  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  ItemsSource="{Binding TipiServizio}"
                  DisplayMemberPath="Descrizione"
                  SelectedItem="{Binding TipoServizio}" Text="Mittente" Height="22" Width="200"/>

        </StackPanel>

        <DataGrid ItemsSource="{Binding Servizi}"
                  SelectedItem="{Binding Servizio,Mode=TwoWay}"
                  AutoGenerateColumns="False" RowHeaderWidth="0" Margin="0,61,3.667,0" IsReadOnly="True" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" 
                                    Width="Auto" 
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    Binding="{Binding Id,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Tipo Servizio" 
                                    Width="Auto" 
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    Binding="{Binding TipoServizio.Descrizione,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn Header="Id Richiesta" 
                                    Width="Auto" 
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    Binding="{Binding IdRichiesta,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn Header="Stato" 
                                    Width="Auto" 
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    Binding="{Binding StatoServizio.Descrizione,UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="3" Content="Invio" Command="{Binding InvioCommand}" Margin="168,0,165.667,0" HorizontalAlignment="Center" Width="129"/>

        <!--Opzioni-->
        <GroupBox x:Name="groupBoxOpzioni" Header="Opzioni" HorizontalAlignment="Left" Height="204" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="443">
            <Grid HorizontalAlignment="Left" Height="125" Margin="46,35,-0.333,0" VerticalAlignment="Top" Width="409" RenderTransformOrigin="0.251,-0.216">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="53*"/>
                    <RowDefinition Height="72*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="Colore" Width="80" VerticalAlignment="Top" HorizontalAlignment="Right"></TextBlock>
                    <CheckBox IsChecked="{Binding Servizio.Colore,Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left"></CheckBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1" Margin="20 0 0 0">
                    <TextBlock Text="Fronte/Retro" VerticalAlignment="Top" HorizontalAlignment="Right" Width="80"></TextBlock>
                    <CheckBox  VerticalAlignment="Top"  IsChecked="{Binding Servizio.FronteRetro,Mode=TwoWay}"></CheckBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1">
                    <TextBlock Text="AR" Width="80" VerticalAlignment="Top" HorizontalAlignment="Right"></TextBlock>
                    <CheckBox VerticalAlignment="Top"  IsChecked="{Binding Servizio.AvvisoRicevimento,Mode=TwoWay}"></CheckBox>
                </StackPanel>


            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
